{
  "$schema": "https://json-schema.org/draft-04/schema#",
  "title": "Stripe Test Key Definition",
  "type": "object",
  "properties": {
    "publishable_key": {
      "type": "string",
      "pattern": "pk_test_[a-zA-Z0-9]{24}$",
      "description": "Publishable Key",
      "x-input-type": "input"
    },
    "secret_key": {
      "type": "string",
      "description": "Secret Key",
      "x-input-type": "password",
      "pattern": "^sk_test_[a-zA-Z0-9]{24}$"
    }
  },
  "required": [
    "secret_key",
    "publishable_key"
  ]
}
