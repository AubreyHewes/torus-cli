#!/usr/bin/env node
'use strict';

var _ = require('lodash');
var yargs = require('yargs');

var cmds = require('../cmds');

function main () {
  var argv = yargs.argv;

  if (argv._.length === 0) {
    return run('help', argv);
  }

  route(argv);
}

function route () {
  return;
}

function run (command, argv) {
  if (!cmds[command]) {
    log.error('Invalid Command Provided');
    return cmds.help(argv);
  }

  return cmds[command].command(argv);
}

if (require.main === module) {
  main();
}
