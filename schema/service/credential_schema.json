{
  "$schema": "https://json-schema.org/draft-04/schema#",
  "description": "schema for what credential schemas should look like",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "title": { "type": "string" },
    "type": {
      "type": "string",
      "enum": [ "object" ]
    },
    "properties": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9\\-_]{3,64}$": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string",
              "minLength": 3,
              "maxLength": 100
            },
            "type": {
              "type": "string",
              "enum": "string"
            },
            "x-input-type": {
              "type": "string",
              "enum": ["input", "password"]
            }
          },
          "required": [
            "type"
          ],
          "additionalProperties": false
        }
      } 
    },
    "additionalProperties": {
      "enum": [ false ]
    },
    "required": {
      "type": "array",
      "items": {
        "type": "string",
        "uniqueItems": true
      }
    }
  },
  "required": [
    "$schema",
    "description",
    "type",
    "properties",
    "additionalProperties",
    "required"
  ],
  "additioanlProperties": false
}
