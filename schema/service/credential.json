{
  "$schema": "https://json-schema.org/draft-04/schema#",
  "description": "schema for shape of a credential",
  "type": "object",
  "properties": {
    "name": { "$ref": "../definitions.json#/credentialName" },
    "existence": {
      "type": "string",
      "description": "whether more than one of these can ever exist at a time",
      "enum": [ "multiple", "singular" ]
    },
    "creation": {
      "type": "string",
      "description": "how these credentials are created (ex: manually fr. user)",
      "enum": [ "manual", "generated" ]
    },
    "methods": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "enum": ["create"] },
          "input": { "$ref": "../definitions.json#/credentialName" },
          "src": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "type",
          "src"
        ],
        "additionalProperties": false
      }
    },
    "schema": {
      "oneOf": [
        {
          "type": "string",
          "description": "filepath to schema describing the credential in json schema",
          "format": "uri"
        },
        { $ref": "credential_schema.json#" }
      ]
    },
    "permissions": { "$ref": "../definitions.json#/permissions" }
  },
  "required": [
    "name",
    "existence",
    "created",
    "schema",
    "permissions"
  ],
  "additionalProperties": false
}
