{
  "$schema": "https://json-schema.org/draft-04/schema#",
  "title": "sub schema for whats required from the user",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9\\-_]{3,64}$": {
      "type": "object",
      "properties": {
        "type": { "$ref": "../definitions.json#/credentialName" },
        "description": {
          "type": "string",
          "minLength": 10,
          "maxLength": 100
        }
      },
      "required": [
        "type",
        "description"
      ],
      "additionalProperties": false
    }
  }
}
