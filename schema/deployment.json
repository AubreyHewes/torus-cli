{
  "$schema": "https://json-schema.org/draft-04/schema#",
  "title": "service instance description",
  "type": "object",
  "properties": {
    "name": { "$ref": "definitions.json#/service" },
    "description": {
      "type": "string",
      "maxLength": 500
    },
    "type": {
      "type": "string",
      "enum": ["subscription","custom"]
    },
    "locations": {
      "type": "array",
      "items": { "$ref": "definitions.json#/location" },
      "minLength": 1
    },
    "descriptors": {
      "type": "object",
      "properties": {
        "default": { "$ref": "definitions.json#/semver" },
        "supported": {
          "type": "array",
          "items": {
            "version": { "$ref": "definitions.json#/semver" },
            "url": {
              "type": "string",
              "format": "uri"
            }
          },
          "minLength": 1
        }
      },
      "required": [
        "default",
        "supported"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "name",
    "description",
    "type",
    "locations",
    "descriptors"
  ]
}
