{
  "$schema": "https://json-schema.org/draft-04/schema#",
  "title": "schema for arigato's service.yml standard",
  "type": "object",
  "properties": {
    "name": { "$ref": "definitions.json#/service" },
    "version": { "$ref": "definitions.json#/semver" },
    "basePath": { "$ref": "definitions.json#/uriPath" },
    "credentials": {
      "type": "array",
      "items": { "$ref": "service/credentials.json" }
    },
    "default": {
      "type": "object",
      "properties": {
        "provided": { "$ref": "service/provided.json#" },
        "environments": { "$ref": "service/suggestion.json#" }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "name",
    "version",
    "basePath",
    "default"
  ],
  "additionalProperties": false
}
